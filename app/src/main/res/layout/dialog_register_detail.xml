<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#69a03a"
        android:orientation="vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/icon_car"
            android:backgroundTint="#ffffffff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="카풀  상세정보 입력"
            android:textColor="#ffffffff"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="40sp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:gravity="center_vertical"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="출발지"
            android:textColor="#000000" />

        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/startplaceTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="경산시 영남대학교"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_marginLeft="40sp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="도착지"
            android:textColor="#000000"/>

        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/endplaceTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="대구시 반월당역"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40sp"
        android:orientation="horizontal">

        <TextView
            android:gravity="center_vertical"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="출발시간"
            android:textColor="#000000"/>

        <EditText
            android:hint="ex) 11월 30일 6시"
            android:maxLines="2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:id="@+id/starttimeET"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:background="#d2dddf"
            android:textColor="#000000"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="40sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="커멘트"
            android:textColor="#000000"/>

        <EditText
            android:hint="ex) 안전운전 하겠습니다"
            android:gravity="center"
            android:padding="10sp"
            android:id="@+id/commentET"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:textColor="#000000"
            android:background="#d2dddf"
            android:textSize="15sp"/>
    </LinearLayout>

    <Button
        android:textColor="#ffffffff"
        android:background="@drawable/round_blue_square"
        android:id="@+id/registerpoolBT"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:text="등록"
        android:textSize="15sp" />
</LinearLayout>