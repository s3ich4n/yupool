<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffffff"
    android:orientation="vertical">

    <FrameLayout
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">


        <RelativeLayout
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/topLayout"
            android:background="#f7f7f7"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="140dp">
            <LinearLayout
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/searchBar"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <ImageView
                    android:id="@+id/image"
                    android:layout_gravity="center"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/icon_car3" />
                <ImageView
                    android:id="@+id/carimage"
                    android:background="@drawable/icon_car3"
                    android:layout_marginLeft="20dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:gravity="center"
                    android:textColor="#3b3a3a"
                    android:id="@+id/commentTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_background"
                    android:text="커멘트" />
                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="left"
                    android:background="@drawable/img_profile_caarinfo"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:gravity="center" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:gravity="center"
                    android:textColor="#3b3a3a"
                    android:id="@+id/timeTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_background"
                    android:text="출발 시간" />
                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="left"
                    android:background="@drawable/icn_departure_settime"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:gravity="center" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/BTLayout"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:layout_weight="1"
                android:visibility="visible"
                android:id="@+id/denyBT"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#e1586a"
                android:text="취소하기"
                android:textColor="#ffffffff" />
        </LinearLayout>

        <FrameLayout
            android:visibility="visible"
            android:id="@+id/BTLayout2"
            android:orientation="horizontal"
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/callBT"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom|left"
                android:background="@drawable/finish_icon_call"
                android:layout_width="70dp"
                android:layout_height="70dp"/>

            <Button
                android:id="@+id/kakaoBT"
                android:layout_marginBottom="130dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom|left"
                android:background="@drawable/kakao"
                android:layout_width="70dp"
                android:layout_height="70dp"/>


            <Button
                android:id="@+id/currentBT"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="bottom|right"
                android:background="@drawable/icon_current"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
            <Button
                android:id="@+id/targetBT"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="bottom|right"
                android:background="@drawable/icon_car3"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

        </FrameLayout>

    </FrameLayout>


</LinearLayout>